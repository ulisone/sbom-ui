<% content_for(:page_title) { "Dashboard" } %>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <!-- Total Projects -->
  <div class="stat-card">
    <div class="flex items-center gap-4">
      <div class="w-12 h-12 bg-primary-light rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
        </svg>
      </div>
      <div>
        <p class="stat-value"><%= @total_projects %></p>
        <p class="stat-label">Projects</p>
      </div>
    </div>
  </div>

  <!-- Total Scans -->
  <div class="stat-card">
    <div class="flex items-center gap-4">
      <div class="w-12 h-12 bg-low-bg rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-low" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
        </svg>
      </div>
      <div>
        <p class="stat-value"><%= @total_scans %></p>
        <p class="stat-label">Total Scans</p>
      </div>
    </div>
  </div>

  <!-- Critical Vulnerabilities -->
  <div class="stat-card">
    <div class="flex items-center gap-4">
      <div class="w-12 h-12 bg-critical-bg rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-critical" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
      </div>
      <div>
        <p class="stat-value"><%= @vulnerability_stats[:critical] %></p>
        <p class="stat-label">Critical</p>
      </div>
    </div>
  </div>

  <!-- Total Vulnerabilities -->
  <div class="stat-card">
    <div class="flex items-center gap-4">
      <div class="w-12 h-12 bg-medium-bg rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-medium" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div>
        <p class="stat-value"><%= @total_vulnerabilities %></p>
        <p class="stat-label">Vulnerabilities</p>
      </div>
    </div>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Vulnerability Summary with Chart -->
  <div class="card lg:col-span-1"
       data-controller="vulnerability-chart"
       data-vulnerability-chart-severity-value="<%= @vulnerability_stats.to_json %>"
       data-vulnerability-chart-trends-value="<%= @vulnerability_trends.to_json %>">
    <h3 class="text-lg font-semibold text-text-primary mb-4">Vulnerability Summary</h3>

    <!-- Doughnut Chart -->
    <% if @vulnerability_stats[:total] > 0 %>
      <div class="h-48 mb-4">
        <canvas data-vulnerability-chart-target="severityChart"></canvas>
      </div>
    <% end %>

    <div class="space-y-3">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-critical"></span>
          <span class="text-text-secondary">Critical</span>
        </div>
        <span class="text-text-primary font-medium"><%= @vulnerability_stats[:critical] %></span>
      </div>

      <div class="flex items-center justify-between">
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-high"></span>
          <span class="text-text-secondary">High</span>
        </div>
        <span class="text-text-primary font-medium"><%= @vulnerability_stats[:high] %></span>
      </div>

      <div class="flex items-center justify-between">
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-medium"></span>
          <span class="text-text-secondary">Medium</span>
        </div>
        <span class="text-text-primary font-medium"><%= @vulnerability_stats[:medium] %></span>
      </div>

      <div class="flex items-center justify-between">
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-low"></span>
          <span class="text-text-secondary">Low</span>
        </div>
        <span class="text-text-primary font-medium"><%= @vulnerability_stats[:low] %></span>
      </div>
    </div>

    <div class="mt-6 pt-4 border-t border-border">
      <%= link_to vulnerabilities_path, class: "text-primary hover:text-primary-hover text-sm font-medium" do %>
        View all vulnerabilities &rarr;
      <% end %>
    </div>
  </div>

  <!-- Recent Scans -->
  <div class="card lg:col-span-2">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-semibold text-text-primary">Recent Scans</h3>
      <%= link_to scans_path, class: "text-primary hover:text-primary-hover text-sm" do %>
        View all
      <% end %>
    </div>

    <% if @recent_scans.any? %>
      <div class="table-container">
        <table class="table">
          <thead>
            <tr>
              <th>Project</th>
              <th>Status</th>
              <th>Format</th>
              <th>Vulnerabilities</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <% @recent_scans.each do |scan| %>
              <tr>
                <td>
                  <%= link_to scan.project.name, project_path(scan.project), class: "text-primary hover:text-primary-hover" %>
                </td>
                <td>
                  <span class="badge <%= scan.completed? ? 'badge-low' : 'badge-medium' %>">
                    <%= scan.status.titleize %>
                  </span>
                </td>
                <td class="text-text-secondary"><%= scan.sbom_format_display || "-" %></td>
                <td>
                  <% summary = scan.vulnerability_summary %>
                  <div class="flex items-center gap-2">
                    <% if summary[:critical] > 0 %>
                      <span class="badge-critical"><%= summary[:critical] %> C</span>
                    <% end %>
                    <% if summary[:high] > 0 %>
                      <span class="badge-high"><%= summary[:high] %> H</span>
                    <% end %>
                    <% if summary[:critical] == 0 && summary[:high] == 0 %>
                      <span class="text-text-muted"><%= scan.total_vulnerabilities %> total</span>
                    <% end %>
                  </div>
                </td>
                <td class="text-text-secondary"><%= time_ago_in_words(scan.created_at) %> ago</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-8">
        <svg class="w-12 h-12 text-text-muted mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
        </svg>
        <p class="text-text-secondary mb-4">No scans yet</p>
        <% if @projects.any? %>
          <%= link_to new_project_scan_path(@projects.first), class: "btn-primary" do %>
            Start your first scan
          <% end %>
        <% else %>
          <%= link_to new_project_path, class: "btn-primary" do %>
            Create a project
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<!-- Vulnerability Trends Chart -->
<% if @vulnerability_trends.size > 1 %>
  <div class="card mt-6"
       data-controller="vulnerability-chart"
       data-vulnerability-chart-trends-value="<%= @vulnerability_trends.to_json %>">
    <h3 class="text-lg font-semibold text-text-primary mb-4">Vulnerability Trends</h3>
    <div class="h-64">
      <canvas data-vulnerability-chart-target="trendChart"></canvas>
    </div>
  </div>
<% end %>

<!-- Projects List -->
<div class="card mt-6">
  <div class="flex items-center justify-between mb-4">
    <h3 class="text-lg font-semibold text-text-primary">Your Projects</h3>
    <%= link_to new_project_path, class: "btn-secondary" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      New Project
    <% end %>
  </div>

  <% if @projects.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @projects.each do |project| %>
        <%= link_to project_path(project), class: "card-hover block" do %>
          <div class="flex items-start justify-between">
            <div>
              <h4 class="font-medium text-text-primary"><%= project.name %></h4>
              <p class="text-sm text-text-secondary mt-1"><%= project.scans.count %> scans</p>
            </div>
            <% summary = project.vulnerability_summary %>
            <% if summary[:critical] > 0 || summary[:high] > 0 %>
              <div class="flex items-center gap-1">
                <% if summary[:critical] > 0 %>
                  <span class="badge-critical"><%= summary[:critical] %></span>
                <% end %>
                <% if summary[:high] > 0 %>
                  <span class="badge-high"><%= summary[:high] %></span>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-8">
      <svg class="w-12 h-12 text-text-muted mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
      </svg>
      <p class="text-text-secondary mb-4">No projects yet</p>
      <%= link_to new_project_path, class: "btn-primary" do %>
        Create your first project
      <% end %>
    </div>
  <% end %>
</div>
