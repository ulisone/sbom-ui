<div class="max-w-xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
  <div class="mb-4">
    <h2 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Account Settings</h2>
    <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">Manage your profile and security.</p>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Profile Section -->
    <div class="bg-white dark:bg-gray-800/50 shadow-sm border border-gray-200 dark:border-gray-700 sm:rounded-lg overflow-hidden">
      <div class="px-4 py-4 sm:p-5">
        <h3 class="text-base font-semibold leading-6 text-gray-900 dark:text-white">Profile Information</h3>
        <div class="mt-3 space-y-4">
          <div>
            <%= f.label :email, class: "block text-sm font-medium leading-5 text-gray-700 dark:text-gray-300" %>
            <div class="mt-1">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full rounded-md border-gray-300 dark:border-gray-600 py-1.5 px-2 text-gray-900 dark:text-gray-100 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm dark:bg-gray-900/50 placeholder-gray-400" %>
            </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="rounded-md bg-yellow-50 dark:bg-yellow-900/20 p-3 border border-yellow-100 dark:border-yellow-900/50">
              <div class="flex">
                <div class="ml-2">
                  <h3 class="text-sm font-medium text-yellow-800 dark:text-yellow-400">Confirmation pending</h3>
                  <div class="mt-1 text-xs text-yellow-700 dark:text-yellow-500">
                    <p>Waiting for: <%= resource.unconfirmed_email %></p>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Password Section -->
    <div class="bg-white dark:bg-gray-800/50 shadow-sm border border-gray-200 dark:border-gray-700 sm:rounded-lg overflow-hidden">
      <div class="px-4 py-4 sm:p-5">
        <h3 class="text-base font-semibold leading-6 text-gray-900 dark:text-white">Change Password</h3>
        <div class="mt-1 text-xs text-gray-500 dark:text-gray-400">
          <p>Leave blank to keep current password.</p>
        </div>
        
        <div class="mt-3 space-y-4">
          <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            <div data-controller="password-visibility">
              <%= f.label :password, "New Password", class: "block text-sm font-medium leading-5 text-gray-700 dark:text-gray-300" %>
              <div class="mt-1 relative">
                <%= f.password_field :password, autocomplete: "new-password", class: "block w-full rounded-md border-gray-300 dark:border-gray-600 py-1.5 pl-2 pr-10 text-gray-900 dark:text-gray-100 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm dark:bg-gray-900/50", data: { password_visibility_target: "input" } %>
                <button type="button" data-action="password-visibility#toggle" class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-500 cursor-pointer">
                  <svg data-password-visibility-target="iconOn" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5"><path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                  <svg data-password-visibility-target="iconOff" class="hidden w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.242 4.242L9.88 9.88" /></svg>
                </button>
              </div>
            </div>

            <div data-controller="password-visibility">
              <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium leading-5 text-gray-700 dark:text-gray-300" %>
              <div class="mt-1 relative">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full rounded-md border-gray-300 dark:border-gray-600 py-1.5 pl-2 pr-10 text-gray-900 dark:text-gray-100 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm dark:bg-gray-900/50", data: { password_visibility_target: "input" } %>
                <button type="button" data-action="password-visibility#toggle" class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-500 cursor-pointer">
                  <svg data-password-visibility-target="iconOn" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5"><path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                  <svg data-password-visibility-target="iconOff" class="hidden w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.242 4.242L9.88 9.88" /></svg>
                </button>
              </div>
            </div>
          </div>
          <% if @minimum_password_length %>
            <p class="text-xs text-gray-400 dark:text-gray-500">Minimum <%= @minimum_password_length %> characters.</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Verification Section -->
    <div class="bg-white dark:bg-gray-800/50 shadow-sm border border-gray-200 dark:border-gray-700 sm:rounded-lg overflow-hidden">
      <div class="px-4 py-4 sm:p-5">
        <h3 class="text-base font-semibold leading-6 text-gray-900 dark:text-white">Verify Changes</h3>
        <div class="mt-3" data-controller="password-visibility">
          <%= f.label :current_password, class: "block text-sm font-medium leading-5 text-gray-700 dark:text-gray-300" %>
          <div class="mt-1 relative">
            <%= f.password_field :current_password, autocomplete: "current-password", class: "block w-full rounded-md border-gray-300 dark:border-gray-600 py-1.5 pl-2 pr-10 text-gray-900 dark:text-gray-100 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm dark:bg-gray-900/50", data: { password_visibility_target: "input" } %>
            <button type="button" data-action="password-visibility#toggle" class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-500 cursor-pointer">
              <svg data-password-visibility-target="iconOn" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5"><path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
              <svg data-password-visibility-target="iconOff" class="hidden w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.242 4.242L9.88 9.88" /></svg>
            </button>
          </div>
          <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Required to confirm your changes.</p>
        </div>
      </div>
      <div class="bg-gray-50 dark:bg-gray-800/80 px-4 py-3 sm:px-6 flex justify-end border-t border-gray-100 dark:border-gray-700">
        <%= link_to "Cancel", :back, class: "text-sm font-medium text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white mr-4 py-2" %>
        <%= f.submit "Save Changes", class: "rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 cursor-pointer" %>
      </div>
    </div>
  <% end %>

  <!-- Danger Zone -->
  <div class="mt-8 bg-white dark:bg-gray-800/30 shadow-sm rounded-lg overflow-hidden border border-red-200 dark:border-red-900/30">
    <div class="px-4 py-4 sm:p-5 flex items-center justify-between">
      <div>
        <h3 class="text-base font-medium leading-6 text-red-600 dark:text-red-400">Delete Account</h3>
        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Permanently remove your account and data.</p>
      </div>
      <div>
        <%= button_to "Delete", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "rounded-md bg-red-50 dark:bg-red-900/20 px-3 py-2 text-xs font-semibold text-red-600 dark:text-red-400 shadow-sm hover:bg-red-100 dark:hover:bg-red-900/40 border border-red-200 dark:border-red-800 cursor-pointer" %>
      </div>
    </div>
  </div>
</div>
