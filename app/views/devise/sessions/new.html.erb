<div class="w-full max-w-md">
  <div class="card">
    <!-- Logo -->
    <div class="text-center mb-8">
      <div class="w-16 h-16 bg-primary rounded-xl flex items-center justify-center mx-auto mb-4">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
        </svg>
      </div>
      <h2 class="text-2xl font-bold text-text-primary">Welcome back</h2>
      <p class="text-text-secondary mt-1">Sign in to SBOM Dashboard</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <div>
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: "you@example.com" %>
      </div>

      <div>
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "input", placeholder: "Your password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center justify-between">
          <label class="flex items-center gap-2 cursor-pointer">
            <%= f.check_box :remember_me, class: "w-4 h-4 rounded border-border bg-surface text-primary focus:ring-primary focus:ring-offset-background" %>
            <span class="text-sm text-text-secondary">Remember me</span>
          </label>

          <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-primary hover:text-primary-hover" %>
          <% end %>
        </div>
      <% end %>

      <div class="pt-2">
        <%= f.submit "Sign in", class: "btn-primary w-full" %>
      </div>
    <% end %>

    <% if devise_mapping.registerable? %>
      <p class="mt-6 text-center text-sm text-text-secondary">
        Don't have an account?
        <%= link_to "Sign up", new_registration_path(resource_name), class: "text-primary hover:text-primary-hover font-medium" %>
      </p>
    <% end %>
  </div>
</div>
