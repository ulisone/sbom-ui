<aside class="w-64 bg-surface border-r border-border flex flex-col">
  <!-- Logo -->
  <div class="p-6 border-b border-border">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 bg-primary rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
        </svg>
      </div>
      <div>
        <h1 class="font-bold text-text-primary">SBOM Dashboard</h1>
        <p class="text-xs text-text-muted">Security Scanner</p>
      </div>
    </div>
  </div>

  <!-- Navigation -->
  <nav class="flex-1 p-4 space-y-1">
    <%= link_to dashboard_path, class: "nav-link#{' nav-link-active' if controller_name == 'dashboard'}" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
      </svg>
      <span>Dashboard</span>
    <% end %>

    <%= link_to projects_path, class: "nav-link#{' nav-link-active' if controller_name == 'projects'}" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
      </svg>
      <span>Projects</span>
    <% end %>

    <%= link_to scans_path, class: "nav-link#{' nav-link-active' if controller_name == 'scans'}" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
      </svg>
      <span>Scans</span>
    <% end %>

    <%= link_to vulnerabilities_path, class: "nav-link#{' nav-link-active' if controller_name == 'vulnerabilities'}" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
      </svg>
      <span>Vulnerabilities</span>
    <% end %>
  </nav>

  <!-- User section -->
  <div class="p-4 border-t border-border">
    <div class="flex items-center gap-3">
      <div class="w-8 h-8 bg-primary-light rounded-full flex items-center justify-center">
        <span class="text-sm font-medium text-primary"><%= current_user.email.first.upcase %></span>
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-text-primary truncate"><%= current_user.name || current_user.email %></p>
        <p class="text-xs text-text-muted truncate"><%= current_user.email %></p>
      </div>
    </div>
  </div>
</aside>
