<% content_for(:page_title) { "Edit #{@project.name}" } %>

<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <%= link_to @project, class: "text-text-secondary hover:text-text-primary flex items-center gap-2" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to <%= @project.name %>
    <% end %>
  </div>

  <div class="card">
    <h2 class="text-xl font-bold text-text-primary mb-6">Edit Project</h2>

    <%= form_with model: @project, class: "space-y-6" do |f| %>
      <% if @project.errors.any? %>
        <div class="alert-error">
          <ul class="list-disc list-inside">
            <% @project.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, class: "label" %>
        <%= f.text_field :name, class: "input", required: true %>
      </div>

      <div>
        <%= f.label :description, class: "label" %>
        <%= f.text_area :description, class: "input", rows: 3 %>
      </div>

      <div>
        <%= f.label :repository_url, "Repository URL", class: "label" %>
        <%= f.text_field :repository_url, class: "input", placeholder: "https://github.com/username/repository" %>
        <p class="text-xs text-text-muted mt-1">Connect a Git repository to scan dependencies directly from source</p>
      </div>

      <% if current_user.organizations.any? %>
        <div>
          <%= f.label :organization_id, t("organizations.title"), class: "label" %>
          <%= f.select :organization_id,
              [[t("projects.personal_project"), nil]] + current_user.organizations.map { |o| [o.name, o.id] },
              { selected: @project.organization_id },
              class: "input" %>
          <p class="text-xs text-text-muted mt-1"><%= t("projects.organization_hint") %></p>
        </div>
      <% end %>

      <div class="flex items-center justify-between pt-4 border-t border-border">
        <div class="flex items-center gap-4">
          <%= f.submit "Update Project", class: "btn-primary" %>
          <%= link_to "Cancel", @project, class: "btn-secondary" %>
        </div>
        <%= button_to "Delete Project", @project, method: :delete, class: "btn-danger", data: { turbo_confirm: "Are you sure you want to delete this project? This action cannot be undone." } %>
      </div>
    <% end %>
  </div>
</div>
