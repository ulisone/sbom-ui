<% content_for(:page_title) { "Projects" } %>

<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold text-text-primary">Projects</h1>
  <%= link_to new_project_path, class: "btn-primary" do %>
    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
    </svg>
    New Project
  <% end %>
</div>

<% if @projects.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @projects.each do |project| %>
      <div class="card">
        <div class="flex items-start justify-between mb-4">
          <div>
            <%= link_to project_path(project), class: "text-lg font-semibold text-text-primary hover:text-primary" do %>
              <%= project.name %>
            <% end %>
            <p class="text-sm text-text-secondary mt-1"><%= project.description.presence || "No description" %></p>
          </div>
        </div>

        <div class="flex items-center gap-4 text-sm text-text-secondary mb-4">
          <div class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            <span><%= project.scans.count %> scans</span>
          </div>
        </div>

        <% summary = project.vulnerability_summary %>
        <div class="flex items-center gap-2 flex-wrap mb-4">
          <% if summary[:critical] > 0 %>
            <span class="badge-critical"><%= summary[:critical] %> Critical</span>
          <% end %>
          <% if summary[:high] > 0 %>
            <span class="badge-high"><%= summary[:high] %> High</span>
          <% end %>
          <% if summary[:medium] > 0 %>
            <span class="badge-medium"><%= summary[:medium] %> Medium</span>
          <% end %>
          <% if summary[:low] > 0 %>
            <span class="badge-low"><%= summary[:low] %> Low</span>
          <% end %>
          <% if summary.values.sum == 0 %>
            <span class="text-text-muted">No vulnerabilities</span>
          <% end %>
        </div>

        <div class="flex items-center gap-2 pt-4 border-t border-border">
          <%= link_to new_project_scan_path(project), class: "btn-primary flex-1" do %>
            New Scan
          <% end %>
          <%= link_to project_path(project), class: "btn-secondary" do %>
            View
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="card text-center py-12">
    <svg class="w-16 h-16 text-text-muted mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
    </svg>
    <h3 class="text-lg font-medium text-text-primary mb-2">No projects yet</h3>
    <p class="text-text-secondary mb-6">Create your first project to start scanning for vulnerabilities.</p>
    <%= link_to new_project_path, class: "btn-primary" do %>
      Create Project
    <% end %>
  </div>
<% end %>
