<% content_for(:page_title) { "New Scan" } %>

<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <%= link_to @project, class: "text-text-secondary hover:text-text-primary flex items-center gap-2" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to <%= @project.name %>
    <% end %>
  </div>

  <div class="card">
    <h2 class="text-xl font-bold text-text-primary mb-2">New Scan</h2>
    <p class="text-text-secondary mb-6">Scan your project for vulnerabilities</p>

    <%= form_with model: [@project, @scan], html: { multipart: true }, class: "space-y-6" do |f| %>
      <% if @scan.errors.any? %>
        <div class="alert-error">
          <ul class="list-disc list-inside">
            <% @scan.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- SBOM Format Selection -->
      <div>
        <%= f.label :sbom_format, "SBOM Format", class: "label" %>
        <div class="grid grid-cols-2 gap-4 mt-2">
          <label class="card-hover cursor-pointer flex items-center gap-3 p-4">
            <%= f.radio_button :sbom_format, "cyclonedx", checked: true, class: "w-4 h-4 text-primary" %>
            <div>
              <p class="font-medium text-text-primary">CycloneDX</p>
              <p class="text-sm text-text-secondary">OWASP Standard</p>
            </div>
          </label>
          <label class="card-hover cursor-pointer flex items-center gap-3 p-4">
            <%= f.radio_button :sbom_format, "spdx", class: "w-4 h-4 text-primary" %>
            <div>
              <p class="font-medium text-text-primary">SPDX</p>
              <p class="text-sm text-text-secondary">Linux Foundation</p>
            </div>
          </label>
        </div>
      </div>

      <!-- Scan Source Selection -->
      <div data-controller="tabs">
        <label class="label">Scan Source</label>
        <div class="flex gap-2 mt-2 mb-4">
          <% if @project.repository_url.present? %>
            <button type="button"
                    class="tab-button px-4 py-2 rounded-lg font-medium transition-colors"
                    data-tabs-target="tab"
                    data-action="click->tabs#switch"
                    data-tab-id="repository">
              <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
              </svg>
              From Repository
            </button>
          <% end %>
          <button type="button"
                  class="tab-button px-4 py-2 rounded-lg font-medium transition-colors"
                  data-tabs-target="tab"
                  data-action="click->tabs#switch"
                  data-tab-id="upload">
            <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
            </svg>
            Upload Files
          </button>
        </div>

        <% if @project.repository_url.present? %>
          <!-- Repository Scan Panel -->
          <div data-tabs-target="panel" data-tab-id="repository" class="hidden">
            <div class="p-4 bg-background rounded-lg border border-border">
              <div class="flex items-center gap-3 mb-4">
                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                </svg>
                <div>
                  <p class="text-text-primary font-medium">Connected Repository</p>
                  <p class="text-sm text-text-secondary truncate max-w-md"><%= @project.repository_url %></p>
                </div>
              </div>
              <p class="text-text-secondary text-sm">
                Dependency files will be automatically detected from the repository root and subdirectories.
              </p>
              <input type="hidden" name="scan_source" value="repository" data-tabs-target="sourceInput">
            </div>
          </div>
        <% end %>

        <!-- File Upload Panel -->
        <div data-tabs-target="panel" data-tab-id="upload" class="<%= @project.repository_url.present? ? 'hidden' : '' %>">
          <div data-controller="file-upload">
            <!-- Dropzone -->
            <div class="card-hover cursor-pointer border-2 border-dashed border-border hover:border-primary transition-colors"
                 data-file-upload-target="dropzone"
                 data-action="dragover->file-upload#dragover dragleave->file-upload#dragleave drop->file-upload#drop click->file-upload#browse">
              <div class="flex flex-col items-center justify-center py-8">
                <svg class="w-12 h-12 text-text-muted mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                </svg>
                <p class="text-text-primary font-medium">Drop files here or click to browse</p>
                <p class="text-sm text-text-secondary mt-1">Upload multiple dependency files at once</p>
              </div>
            </div>

            <!-- Hidden file input -->
            <%= f.file_field :dependency_files,
                             multiple: true,
                             accept: ".json,.txt,.lock,.xml,.mod,.sum,.toml",
                             class: "hidden",
                             data: { file_upload_target: "input", action: "change->file-upload#handleFileSelect" } %>

            <!-- File Preview -->
            <div class="hidden mt-4 space-y-2" data-file-upload-target="preview">
              <p class="text-sm font-medium text-text-secondary">Selected Files:</p>
              <div class="space-y-2" data-file-upload-target="fileList"></div>
            </div>
          </div>
          <input type="hidden" name="scan_source" value="upload" data-tabs-target="sourceInput">
        </div>
      </div>

      <div class="flex items-center gap-4 pt-4 border-t border-border">
        <%= f.submit "Start Scan", class: "btn-primary" %>
        <%= link_to "Cancel", @project, class: "btn-secondary" %>
      </div>
    <% end %>
  </div>

  <!-- Supported Files Info -->
  <div class="card mt-6">
    <h3 class="text-lg font-semibold text-text-primary mb-4">Supported File Types</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="flex items-center gap-3">
        <span class="w-8 h-8 bg-primary-light rounded flex items-center justify-center text-primary font-mono text-xs">npm</span>
        <span class="text-text-secondary">package.json, package-lock.json</span>
      </div>
      <div class="flex items-center gap-3">
        <span class="w-8 h-8 bg-primary-light rounded flex items-center justify-center text-primary font-mono text-xs">py</span>
        <span class="text-text-secondary">requirements.txt, Pipfile.lock</span>
      </div>
      <div class="flex items-center gap-3">
        <span class="w-8 h-8 bg-primary-light rounded flex items-center justify-center text-primary font-mono text-xs">rb</span>
        <span class="text-text-secondary">Gemfile.lock</span>
      </div>
      <div class="flex items-center gap-3">
        <span class="w-8 h-8 bg-primary-light rounded flex items-center justify-center text-primary font-mono text-xs">java</span>
        <span class="text-text-secondary">pom.xml</span>
      </div>
      <div class="flex items-center gap-3">
        <span class="w-8 h-8 bg-primary-light rounded flex items-center justify-center text-primary font-mono text-xs">go</span>
        <span class="text-text-secondary">go.mod, go.sum</span>
      </div>
      <div class="flex items-center gap-3">
        <span class="w-8 h-8 bg-primary-light rounded flex items-center justify-center text-primary font-mono text-xs">rs</span>
        <span class="text-text-secondary">Cargo.lock</span>
      </div>
    </div>
  </div>
</div>
